@model FormSubmission.Models.User

<form asp-action="Create" asp-controller="User" class="form-group" method="post">

    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName" class="form-control"></label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName" class="form-control"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Age"></span>
        <label asp-for="Age" class="form-control"></label>
        <input asp-for="Age" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="EmailAddress"></span>
        <label asp-for="EmailAddress" class="form-control"></label>
        <input asp-for="EmailAddress" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password" class="form-group"></label>
        <input asp-for="Password" class="form-group">
    </div>
    <div class="form-group">
        <span asp-validation-for="When"></span>
        <label asp-for="When" class="form-group"></label>
        <input type="date" asp-for="When" id="When">
    </div>
    <button type="submit" class="btn-primary">Submit </button>

</form>